<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/top_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDC5BF"
        ></View>
    <RadioGroup
        android:id="@+id/btm_radiogroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#EBEBEB"
        android:layout_height="50dp">

        <RadioButton
            android:id="@+id/rb_movie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_movie"
            android:text="电影"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:textColor="@drawable/radiogroup_textcolor"
            android:drawablePadding="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />

        <RadioButton
            android:id="@+id/rb_cinema"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_cinema"
            android:text="影院"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:textColor="@drawable/radiogroup_textcolor"
            android:drawablePadding="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />

        <RadioButton
            android:id="@+id/rb_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_find"
            android:text="发现"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:textColor="@drawable/radiogroup_textcolor"
            android:drawablePadding="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />

        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_my"
            android:text="我的"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:textColor="@drawable/radiogroup_textcolor"
            android:drawablePadding="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />

    </RadioGroup>
</LinearLayout>
